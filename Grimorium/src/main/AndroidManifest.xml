<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

	<application
		android:name=".GrimoriumApp"
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme">
		<activity
			android:name=".activity.SpellListActivity"
			android:label="@string/app_name"
			android:noHistory="false"
			android:theme="@style/AppTheme"
			android:exported="true">

			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".activity.SpellDetailActivity"
			android:noHistory="false"
			android:theme="@style/AppTheme">
		</activity>
		<activity
			android:name=".activity.SpellFilterActivity"
			android:noHistory="false"
			android:theme="@style/AppTheme">
		</activity>
		<activity
			android:name=".activity.SourceListActivity"
			android:noHistory="false"
			android:theme="@style/AppTheme">
		</activity>
		<activity
			android:name=".activity.SourceDetailActivity"
			android:noHistory="false"
			android:theme="@style/AppTheme">
		</activity>
		<activity
			android:name=".activity.ProfileListActivity"
			android:theme="@style/AppTheme">
		</activity>
		<activity
			android:name=".aboutbox.activity.AboutActivity"
			android:theme="@style/AppTheme.MaterialAboutActivity">
		</activity>
	</application>

</manifest>