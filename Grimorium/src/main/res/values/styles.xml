<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- Base application theme. -->
	<style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

		-->
		<item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
	</style>

	<!-- About theme. -->
	<style name="AppTheme.MaterialAboutActivity" parent="Theme.Mal.Light.DarkActionBar">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/accent</item>
	</style>

	<!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/accent</item>

		<item name="android:textColorPrimary">@color/primary_text</item>
		<item name="android:textColorSecondary">@color/secondary_text</item>
	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
	</style>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
	</style>

	<style name="ToolBar" parent="AppTheme">
		<item name="android:textColorPrimary">@color/title</item>
		<item name="android:actionMenuTextColor">@color/title</item>
		<item name="android:textColorSecondary">@color/title</item>
	</style>

	<style name="ToolBar.Popup" parent="AppTheme">
		<!--<item name="android:textColorPrimary">@color/title</item>-->
		<!--<item name="android:actionMenuTextColor">@color/title</item>-->
		<!--<item name="android:textColorSecondary">@color/title</item>-->
	</style>

	<style name="Label" parent="TextAppearance.AppCompat.Medium">
		<item name="android:textSize">@dimen/detail_text_size</item>
	</style>

	<style name="Label.Header" parent="TextAppearance.AppCompat.Title">

	</style>

	<style name="Label.Name">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginStart">8dp</item>
		<item name="android:layout_marginLeft">8dp</item>
		<item name="android:layout_marginEnd">8dp</item>
		<item name="android:layout_marginRight">8dp</item>

		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/primary_text</item>
	</style>

	<style name="Label.Value">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginStart">8dp</item>
		<item name="android:layout_marginLeft">8sp</item>
		<item name="android:textColor">@color/primary_text</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">marquee</item>
		<item name="android:marqueeRepeatLimit">marquee_forever</item>
	</style>

	<style name="Label.Value.Reversible">
		<item name="android:textStyle">italic</item>
	</style>

	<style name="Label.Value.School">
	</style>

	<style name="Details.Preferred" parent="@style/ListItem.Button.Preferred">
		<!--<item name="android:layout_width">@dimen/item_compact_icon_size_large</item>-->
		<!--<item name="android:layout_height">@dimen/item_compact_icon_size_large</item>-->
	</style>

	<style name="ListItem">
	</style>

	<style name="ListItem.Container">
		<item name="android:background">?android:attr/selectableItemBackground</item>
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
	</style>

	<style name="ListItem.Icon">
		<item name="android:layout_width">@dimen/item_compact_icon_size</item>
		<item name="android:layout_height">@dimen/item_compact_icon_size</item>

		<item name="android:layout_marginTop">@dimen/item_compact_margin</item>
		<item name="android:layout_marginRight">@dimen/item_compact_margin</item>
		<item name="android:layout_marginLeft">@dimen/item_compact_margin</item>
		<item name="android:layout_marginBottom">@dimen/item_compact_margin</item>
	</style>

	<style name="ListItem.Icon.Preferred">
		<item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
	</style>

	<style name="ListItem.Button">
	</style>

	<style name="ListItem.Button.Preferred" parent="ListItem.Icon">
		<item name="android:button">@drawable/ic_selectable_star</item>
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
	</style>

	<style name="ListItem.Label" parent="android:TextAppearance">
	</style>

	<style name="ListItem.Label.Icon">
		<!-- Same as ListItem.Icon -->
		<item name="android:layout_width">@dimen/item_compact_icon_size</item>
		<item name="android:layout_height">@dimen/item_compact_icon_size</item>
		<!--<item name="android:layout_margin">@dimen/item_compact_margin</item>-->
		<item name="android:layout_marginTop">@dimen/item_compact_margin</item>
		<item name="android:layout_marginRight">@dimen/item_compact_margin</item>
		<item name="android:layout_marginLeft">@dimen/item_compact_margin</item>
		<item name="android:layout_marginBottom">@dimen/item_compact_margin</item>
	</style>

	<style name="ListItem.Label.Type" parent="ListItem.Label.Icon">
		<item name="android:gravity">center</item>

		<item name="android:textStyle">bold</item>
		<item name="android:textSize">24sp</item>
	</style>

	<style name="ListItem.Label.Level" parent="ListItem.Label.Icon">
		<item name="android:gravity">center</item>

		<item name="android:textStyle">bold</item>
		<item name="android:textSize">24sp</item>
	</style>

	<style name="ListItem.Label.Name">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>

		<!--<item name="android:gravity">center_vertical</item>-->

		<!--<item name="android:textSize">16sp</item>-->
	</style>

	<style name="ListItem.Label.School">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>

		<!--<item name="android:gravity">center_vertical</item>-->

		<item name="android:textSize">12sp</item>
		<item name="android:textColor">?android:attr/textColorSecondary</item>
	</style>

	<style name="ListItem.Label.Components">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<!--<item name="android:layout_height">32sp</item>-->

		<item name="android:textStyle">bold</item>
		<!--<item name="android:gravity">center_vertical</item>-->
	</style>

