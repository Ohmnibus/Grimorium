<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context="net.ohmnibus.grimorium.fragment.SpellListFragment"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	>
	<androidx.recyclerview.widget.RecyclerView
		style="@style/SourceList.Container"

		android:id="@+id/list"
		android:name="net.ohmnibus.grimorium.fragment.SourceListFragment"

		android:layout_width="match_parent"
		android:layout_height="match_parent"

		app:layoutManager="LinearLayoutManager"
		tools:context="net.ohmnibus.grimorium.fragment.SourceListFragment"
		tools:listitem="@layout/item_source"
		/>

	<include layout="@layout/content_no_data"/>
</FrameLayout>